{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@teki/shared": ["../../packages/shared"],
      "@teki/shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../../packages/shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
